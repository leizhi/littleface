<?xml version="1.0" encoding="UTF-8" ?>
<struts>

	<package name="xpc" namespace="/xpc" extends="struts-default">

		<cache name="action" size="1024" sizeUnit="K" time="24" timeUnit="HOUR" />
		<!-- <cache name="dbobj" size="1024" sizeUnit="K" time="24" timeUnit="HOUR" /> -->

		<global-results>
			<result name="login" type="redirectAction">LoginXpc</result>
			<result name="error" type="redirect">error.jsp</result>
		</global-results>
		
		<!-- Add actions here -->

		<action name="Index" default="promptIndex"
			class="com.mooo.mycoz.action.IndexAction">
			<result name="promptIndex">/jsp/start.jsp</result>
			<result name="promptLogin">/Login.do</result>
		</action>
		
		<action name="Login" default="promptLogin"
			class="com.mooo.mycoz.action.LoginAction">
			<result name="promptLogin">/jsp/login.jsp</result>
			<result name="processLogin">/Index.do</result>
			<result name="processLogout">/Login.do</result>
		</action>
				
		<action name="Menu" default="show"
			class="com.mooo.mycoz.action.MenuAction">
			<result name="show">/jsp/menu.jsp</result>
		</action>
		
		<action name="File" default="list"
			class="com.mooo.mycoz.action.operation.FileAction">
			<result name="list">/jsp/operation/listFile.jsp</result>
			<result name="promptUpload">/jsp/operation/uploadFile.jsp</result>
			<result name="processUpload">/File.do</result>
			<result name="processDelete">/File.do</result>
			<result name="processDownload">/File.do</result>
		</action>
		
		<action name="CodeType" default="list"
			class="com.mooo.mycoz.action.profile.CodeTypeAction">
			<result name="list">/jsp/profile/listCodeType.jsp</result>
			<result name="promptAdd">/jsp/profile/addCodeType.jsp</result>
			<result name="processAdd">/CodeType.do</result>
			<result name="promptUpdate">/jsp/profile/editCodeType.jsp</result>
			<result name="processUpdate">/CodeType.do</result>
			<result name="processDelete">/CodeType.do</result>
			<result name="listCode">/jsp/profile/listCode.jsp</result>
			<result name="processAddCode"></result>
			<result name="processUpdateCode"></result>
			<result name="processDeleteCode"></result>			
		</action>
				
		<action name="Tree" default="list"
			class="com.mooo.mycoz.action.profile.TreeAction">
			<result name="list">/jsp/profile/listTree.jsp</result>
			<result name="promptAdd">/jsp/profile/addTree.jsp</result>
			<result name="processAdd">/Tree.do</result>
			<result name="promptUpdate">/jsp/profile/editTree.jsp</result>
			<result name="processUpdate">/Tree.do</result>
			<result name="processDelete">/Tree.do</result>
		</action>
		
		<action name="LinearCode" default="list"
			class="com.mooo.mycoz.action.profile.LinearCodeAction">
			<result name="list">/jsp/profile/listLinearCode.jsp</result>
			<result name="promptAdd">/jsp/profile/addLinearCode.jsp</result>
			<result name="processAdd">/LinearCode.do</result>
			<result name="promptUpdate">/jsp/profile/editLinearCode.jsp</result>
			<result name="processUpdate">/LinearCode.do</result>
			<result name="processDelete">/LinearCode.do</result>
			<result name="processAddCode">/LinearCode.do</result>
			<result name="processUpdateCode">/jsp/profile/editLinearCode.jsp</result>
			<result name="processDeleteCode">/LinearCode.do</result>
			<result name="listCode">/LinearCode.do</result>
		</action>
	</package>
</struts>
