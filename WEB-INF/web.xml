<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
        <init-param>
            <param-name>charset</param-name> 
            <param-value>UTF-8</param-value> 
        </init-param>
    	<display-name>XPC Web Edition</display-name>
    	<description>
      		XPC Freight Forwarding Applicatio, Web Edition
    	</description>
	<!-- Listeners -->
	<listener>
		<listener-class>org.pig.response.SessionCounter</listener-class>
	</listener>
	<!-- distributable/ -->
	<context-param>
		<param-name>configDir</param-name>
		<param-value>WEB-INF/config</param-value>
	</context-param>
	<context-param>
		<param-name>logDir</param-name>
		<param-value>WEB-INF/log</param-value>
	</context-param>

        <servlet>
             <servlet-name>ActionServlet</servlet-name>
             <servlet-class>org.pig.action.ActionServlet</servlet-class>
      	</servlet>
      	<servlet-mapping>
            <servlet-name>ActionServlet</servlet-name>
            <url-pattern>*.do</url-pattern>
      	</servlet-mapping>

       <welcome-file-list>
                <welcome-file>jsp/index.jsp</welcome-file>
	</welcome-file-list>

</web-app>

